/* 获取验证码 */
page{
    height: 100%;
    background: #f9f9f9;
}
.wx_phone_number{
    width: 100%;
    height: 100%;
}
.phone_get_code{
    width: 100%;
    margin-top: 20rpx;
    background: #fff;
}
.phone_number, .phone_code{
    width: 94%;
    display: flex;
    margin: 0 auto;
    height: 92rpx;
}
.phone_number input, .phone_code input{
    width: 300rpx;
    height: 100%;
    line-height: 92rpx;
    color: #333;
    font-size: 32rpx;
}
.number_text, .code_text{
    width: 20%;
    height: 100%;
    line-height: 92rpx;
    font-size: 32rpx;
    color: #333;
}
.seconds_text{
    width: 210rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    height: 60rpx;
    margin-top: 16rpx;
    text-align: center;
    border: 2rpx solid #c7c7c7;
    border-radius: 8rpx;
    position: absolute;
    right: 3%;
}

.phone_number{
    border-bottom: 2rpx #c7c7c7 solid;
}
.phone_number_btn{
    width: 94%;
    height: 92rpx;
    margin: 8% auto 0 auto;
    text-align: center;
    background: #c4c4c4;
    font-size: 36rpx;
}
.phone_number_btn text{
    color: #fff;
    line-height: 92rpx;
}


.btn_color{
    background: #63b44e
}