/* pages/login/wx_login_phone_num/wx_login_phone_num.wxss */
.logo_image{
    width: 20%;
    margin: 20% auto 0 auto;
    text-align: center;
}
.logo_image image{
    width: 100%;
}
.logo_image text{
    font-size: 32rpx;
    font-family: "黑体";
}
/* 手机号输入 */
.phone_input{
    width: 80%;
    height: 92rpx;
    border: 3rpx #c7c7c7 solid;
    margin: 8% auto 0 auto;
}
.phone_input input {
    height: 100%;
    width: 94%;
    margin-left: 6%;

}
.phone_placeholder{
    color: #cccccc;
    font-size: 32rpx;
}
.tip_content{
    width: 80%;
    font-size: 32rpx;
    margin: 0 auto;
}
.tip_content text{
    width: 100%;
    font-size: 24rpx;
    color: #a0a0a0;
}
.validation_next{
    width: 80%;
    height: 92rpx;
    margin: 8% auto 0 auto;
    text-align: center;
    background: #c4c4c4;
}
.validation_next text{
    color: #fff;
    line-height: 92rpx;
    font-size: 36rpx;
}

.btn_color{
    background: #63b44e
}