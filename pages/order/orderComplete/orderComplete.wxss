/* pages/order/orderComplete/orderComplete.wxss */
.big_box{
    width: 100%;
    height: 100%;
}
.success_box{
    width: 100%;
    display: flex;
    margin-top: 30%;
}
.success_box icon{
    margin: 0 auto;
}
.success_text{
    text-align: center;
    line-height: 80rpx;
}
.btn_box{
    display: flex;
    width: 100%;
    margin-top: 60rpx;
}
.btn1, .btn2{
    flex-grow: 0.5;
    font-size: 32rpx;
}
.btn1 text{
    float: right;
    font-size: 32rpx;
    margin-right: 20rpx;
    width: 50%;
    text-align: center;
    padding: 12rpx;
    border: 2rpx solid #f97510;
    border-radius: 16rpx;
    color: #f97510;
}
.btn2 text{
    float: left;
    font-size: 32rpx;
    margin-right: 16rpx;
    width: 50%;
    text-align: center;
    padding: 12rpx;
    color: #666;
    border: 2rpx solid #666;
    border-radius: 20rpx;
}

/* 评论 */
.evaluation_model{
    width: 100%;
    height: 40%;
    background: #fff;
    position: fixed;
    bottom: 0;
    line-height: 60rpx;
    z-index: 12;
}
.evaluation_model_text{
    width: 92%;
    display: flex;
    margin: 0 auto;
}
.evaluation_model_text icon {
    position: relative;
    top: 22rpx;
}
.evaluation_model_text text{
    font-size: 28rpx;
    color: #666;
    text-align: center;
    flex-grow: 9;
}
.evaluation_model_star{
    display: flex;
    height: 60rpx;
    width: 92%;
    margin: 0 auto;
}
.z image{
    width: 40rpx;
    margin-top: 4rpx;
    margin-left: 42rpx;
}
.z image:first-of-type{
    margin-left: 0; 
}
.z{
    width: 50%;
    display: flex;
    margin: 0 auto;
}


.evaluation_model_btn{
    width: 100%;
    text-align: center;
    line-height: 80rpx;
    background: #63b64e;
    color: #fff;
    font-size: 30rpx;
    position: fixed;
    bottom: 0;
}

.evaluation_model_textarea {
    width: 92%;
    margin: 0 auto;
    height: 240rpx;
}
.evaluation_model_textarea textarea{
    width: 100%;
    height: 100%;
    font-size: 28rpx;
    color: #333;
    line-height: 50rpx;
}

.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    bottom: 0;
    background: #000;
    opacity: 0.4;
    z-index: 10;
}