/* pages/serverIndex/serverIndex.wxml.wxss */
.serverHeader{
    position: fixed;
    top:0; 
    width: 100%;
    z-index: 17;
}
 .serverClassify{
    margin-top: 84rpx; 
    display: inline-block;
    width: 100%;
    position: fixed;
    top: 0;
    background: #fff;
} 
.serverItem{
    border-bottom:2rpx solid #eee;
    padding-bottom: 8rpx;    
}
/*  加载更多   */
.weui-loading {
  margin: 0 auto;
  width: 40rpx;
  height: 40rpx;
   display: block; 
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  height: 100%;
  width: 100%;
  margin: 30rpx auto;
  line-height: 30rpx;
  font-size: 28rpx;
  text-align: center;
}
.weui-loadmore__tips {
   display: inline-block; 
  vertical-align: middle;
}
.noData{
    text-align: center;
    font-size: 30rpx;
    line-height: 70rpx;
    color: #999;
}


/*服务列表  */
.serverItemScroll{
    position:absolute;
    top:340rpx;
    z-index:-1;
    width: 100%;
    background: #fff;
}
.serverItemView{
    width: 100%;
}
 .serverItem{
    display: flex; 
    width: 92%;
    margin: 20rpx  auto;
}
 .serverImage{
    height: 200rpx;
    width: 30%;
    border-radius: 10rpx;
}
.serverImage image{
    width: 100%;
}

.serverMsg{
    font-size: 28rpx;
    margin-left: 20rpx;
    color: #333;
    width: 70%;
    
}
.serverMsg image {
    width: 35rpx;
    vertical-align: middle;
    padding-right: 10rpx;

}
.serverName{
    margin:5rpx 0 10rpx 0;
}
.serverEa, .serverClass{
    font-size: 24rpx;
    color: #999;
}
.serverClass{
    float: left;
}
.serverEa{
    line-height: 45rpx;
}
.eaName{
    color: #494949;
}
.serverMoney{
    font-size:32rpx; 
    display: inline-block;
    color: #ff5454;
    font-weight: bold;
    width: 100%;
    margin-top: 5rpx;
}
.serverBuy{
    display: inline-block;
    float: right;
    color: #777;
    font-weight: normal;
}
.serverBuy image{
    width: 40rpx;
    vertical-align: middle;
    float: right;
    padding-left: 10rpx;
}
.serverTimeView{
    margin-left: 10rpx;
    float: left;
    height: 50rpx;
}
.serverTimeView image{
    width: 30rpx;
    vertical-align: middle;
    
}
.servertime{
    font-size: 24rpx;
    color: #999;
}