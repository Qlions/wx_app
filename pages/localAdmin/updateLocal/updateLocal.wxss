/* pages/localAdmin/addLocal/addLocal.wxss */
.add-local {
  font-size: 14px;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #f5f5f5;
}
.add-local-title {
  padding: 30rpx 20rpx;
}
.add-local-info {
  background: #fff;
}
.add-local-info .section {
  overflow: hidden;
  height:100rpx;
  padding:0 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  border-bottom: 1px solid #ddd;
  text-align: left;
}
.add-local-info .section image.right {
  width: 18rpx;
  height: 80rpx;
}
.add-local-info .section image.addree {
  width:20rpx;
  height:38rpx;
  margin-right:10rpx;
}
.add-local-info .section input {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
}

.add-local-btn {
  width: 100%;
  height: 100rpx;
  display: block;
  background: #63b64e;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 14px;
  position: fixed;
  bottom: 0;
}