/* pages/localAdmin/localAdmin.wxss */
.local-admin {
  position: absolute;
  top: 0;
  left: 0;
  background: #f5f5f5;
  width: 100%;
  height: 100%;  
}
.local-content-list {
  font-size: 14px;
  background: #fff;
  padding:  0 20rpx;
  margin-top: 20rpx;
}
.local-content-list>view {
  padding: 20rpx 0;
}
.local-content-list .flex {
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  text-align: left;
}
.local-content-list .flex text {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
}
.local-content-list-manage,
.local-content-list-info-name {
  float: left;
}
.local-content-list-updata,
.local-content-list-info-phone {
  float: right;
}
.local-content-list-btn {
  border-top: 1px solid #eee;
}
.local-content-list image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.local-content-list-updata .delete image {
  margin-right: 0;
}
.local-btn navigator {
  width: 100%;
  height: 100rpx;
  display: block;
  background: #63b64e;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 14px;
  position: fixed;
  bottom: 0;
}