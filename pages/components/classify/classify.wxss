/* pages/components/classify/classify.wxss */
.classViewBox{
    width: 100%;
    display: flex;
    padding-bottom: 25rpx;
}
.classViewOpt{
    width: 25%;
    
    font-size: 28rpx;
}
.classViewOpt image{
    width: 50%;
    text-align: center;
    margin: 20% 0 0 25%;
}
.classViewOpt text{
    display: block;
    text-align: center;
    color: #333; 
}
.OptList{
    display: flex;
    width: 100%;
    height: 80rpx;
    font-size: 28rpx;
    text-align: center;
    background: #f4f5f6;
    position: relative;
    z-index: 16;

}
.OptItem{
    width: 24.8%;
    line-height: 80rpx;
    color: #7f7f7f;
}

.OptList image{
    width: 20rpx;
    margin-left: 4rpx; 
}
.line{
    float: right;
    width: 2rpx;
    height: 30rpx;
    border-right: 1rpx solid #7f7f7f; 
    opacity: 0.5;
    margin-top: 24rpx;
}

.childListDom{
    width: 100%;
    z-index: 15;
    position: relative;
    background:#fff;
    text-indent:26rpx;
    color: #333;
}
.childItemDom{
    border-bottom: 2rpx solid #f3f3f3;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    width: 90%;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    width: 100%;
    background: #fff;
} 
.childItemDom:last-of-type{
    border: none;
}
.maskView{
    background: #000;
    opacity: 0.3;
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -100;
}
.itemActive{
    color: #12a08d;
}
