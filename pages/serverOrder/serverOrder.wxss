/* pages/serverOrder/serverOrder.wxss */
.server-order {
  font-size: 14px;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.server-order .prompt {
  width: 100%;
  height: 60rpx;
  background: #faf5e8;
  color: #f59746;
  line-height: 60rpx;
  text-align: center;
}
.server-order-info {
  padding: 20rpx;
  background: #fff;
}
.server-order-info>view {
  padding-bottom: 15rpx;
}
.server-order-info>view:last-child {
  padding-bottom: 0; 
}
.server-order-info text {
  padding-right: 20rpx;  
}
.server-order-details-title {
  padding: 30rpx 20rpx;
}
.server-order-details-box {
  background: #fff;
  padding: 0 20rpx;
}
.server-order-details-box-info {
  padding: 20rpx 0;
  border-bottom: 10rpx solid #e6e6e6;
}
.server-order-details-box-pic {
  padding-top: 20rpx;
}
.info-left-text-name {
  padding-top: 6rpx;
}
.info-left-img {
  width:150rpx;
  height:150rpx;
  overflow:hidden;
  float: left;
}
.info-left-img image {
  width: 100%;
  height: 100%;
}
.info-left-text {
  width:76%;
  float:right;
}
.info-left-text-method {
  overflow:hidden;
  display:-webkit-box;
  display:-webkit-flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  text-align:left;
}
.info-left-text-method image {
  width:40rpx;
  height:40rpx;
}
.info-left-text-source {
  padding: 12rpx 0;
}
.info-left-text-method-right {
  -webkit-box-flex:1;
  -webkit-flex:1;
}
.method-right {
  float: right;
  color:#ff5454;
}
.server-order-details-box-pic {
  width: 100%;
  border-bottom:1px solid #e6e6e6;
}
.server-order-details-box-pic .pic-item {
  overflow: hidden;
  padding-bottom: 20rpx;
  display:-webkit-box;
  display: box;
  display: -moz-box;
}
.server-order-details-box-pic .pic-item text {
  display: block;
}
.pic-item-line {
  border-bottom: 1px dashed #333;
  -webkit-box-flex:1;
  -webkit-flex:1;
  position:relative;
  top:-17rpx;
}
.server-order-details-box-content {
  width: 100%;
}
.server-order-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #e6e6e6;
}
.server-order-item-name {
  width:170rpx;
  display:block;
  float:left;
}
.server-order-item-cone {
  width:75%;
  display:block;
  float:left;
}
.server-remarks {
  border-bottom: none;
}
.server-order-pay {
  padding-bottom:100rpx;
}
.server-order-pay-details {
  background: #fff;
}
.server-order-payInfo {
  padding: 20rpx;
  background: #fff;
  overflow: hidden;
  height: 60rpx;
  border-bottom: 6rpx solid #e6e6e6;
}
.server-pay-method {
  float: right;
   display:-webkit-box;
  display:-webkit-flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  text-align:left;
}
.server-pay-method text {
  -webkit-box-flex:1;
  -webkit-flex:1;
}
.server-pay-method image {
  width:12rpx;
  height:60rpx;
  padding-left:10rpx;
}
.server-order-price {
  padding: 20rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.server-price-true {
  padding: 50rpx 20rpx;
}
.order-price-right {
  float: right;
  color: #ff5454;
  font-weight: bold;
}
.server-price-true-right {
  float: right;
  font-weight: bold;
}
.server-price-true-right .cor {
  color: #ff5454;
}
.server-order-item-right {
  width:76%;
  display:block;
  float:left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}
.submitorder {
  width: 100%;
  height: 100rpx;
  display: block;
  background: #63b64e;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 14px;
  position: fixed;
  bottom: 0;
}