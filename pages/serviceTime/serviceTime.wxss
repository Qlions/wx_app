/* pages/serviceTime/serviceTime.wxss */
.appointmentTimeView{
    width: 100%;
    height: 80rpx;
    background: #f5f5f5;
}
.leftBtn, .rightBtn{
    width: 32rpx;
    height: 100%;

}
.leftBtn image{
    width: 28rpx;
    margin-top: 26rpx;
}
.rightBtn image{
    width: 28rpx;
    margin-top: 26rpx;
}
 .leftBtn, .weekView{
    float: left;
}
.rightBtn{
   float: right;
   margin-right: 16rpx;
}
.leftBtn{
    margin-left: 16rpx;
}
.weekView{
    width: 86%;
    height: 100%;
    display: flex;
    white-space: nowrap;
    margin: 0 auto;
}
.appointmentWeek{
    width: 108rpx;
    height: 100%;
    display: inline-block;
}
.appointmentWeek text{
    font-size: 24rpx;
    display: block;
    text-align: center;
    width: 80rpx;
    color: #666;
    margin: 0 auto;
}
.appointmentWeek text:first-of-type{
    margin-top: 8rpx;
}
.scroll-header{
  display: flex;
  white-space: nowrap; 
  width: 80%;
}
.scroll-header view{
  height:128rpx;
  width:128rpx;
  border:1px solid red;
  display: inline-block; 
}

/* 时间 */
.appointmentTimeView2{
