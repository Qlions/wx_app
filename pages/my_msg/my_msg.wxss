/* pages/my_msg/my_msg.wxss */
page{
    width: 100%;
    height: 100%;
    background: #f5f5f5;
}
.my_msg{
    display: flex;
    width: 88%;
    margin: 0 auto;
    height: 160rpx;
}
.my_msg_header_image{
    width: 20%;
    height: auto;
    position: relative;
}
.my_msg_header_image image{
    width: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    border-radius: 50%;

}
.my_msg_information{
    width: 75%;
    position: relative;
}
.my_msg_information text{
    display: block;
    font-size: 28rpx;
    color: #333;
    margin-left: 4%;
}
.my_msg_information text:first-of-type{
    margin:40rpx 0 0 4%;
    
}

.right_arrow{
    width:5%;
    height: 100%;
    position: relative;
}
.right_arrow image{
    width: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
}

.adress_list{
    height: 100rpx;
    margin-top: 3%; 
    border-bottom: 2rpx solid #eee;
    border-top: 2rpx solid #eee;
    background: #fff;
}
.adress_icon{
    width: 95%;

}
.adress_icon text{
    font-size: 32rpx;
    line-height: 100rpx;
    height: 100%;
    display: inline-block;
    margin-left:20rpx; 
}
.adress_icon image{
    width: 40rpx;
    vertical-align: middle;
}
.right_arrow_adress{
    width:5%;
    height: 100%;
    position: relative;
}
.right_arrow_adress image{
    width: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
}

.out_login{
    height: 100rpx;
    margin-top: 3%; 
    border-bottom: 2rpx solid #eee;
    border-top: 2rpx solid #eee;
    background: #fff;
}
.out_login text{
    color: #ff5354;
    text-align: center;
    line-height: 100rpx;
    width: 100%;
    font-size: 32rpx;
    display: inline-block;
    font-family: "微软雅黑";
}